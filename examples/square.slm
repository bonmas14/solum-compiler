use: "core";

draw_square: (size: s64, angle: s64, buffer: ^u8) = {
    half: s64 = size / 2;
    sin: s64 = sin_lookup(angle);
    cos: s64 = cos_lookup(angle);
    
    i: s64 = -half;
    while i <= half {
        j: s64 = -half;
        while j <= half {
            // Rotate point
            x: s64 = (j * cos - i * sin) >> 8;
            y: s64 = (j * sin + i * cos) >> 8;
            
            px: s64 = 20 + x;
            py: s64 = 10 + y;
            
            // Set pixel in buffer
            if (px >= 0 && px < 40) && (py >= 0 && py < 20) {
                @(^buffer + (px + py * 40) * 8) = 0x23; // '#'
            }
            j = j + 1;
        }
        i = i + 1;
    }
}

// Fixed-point sin approximation (256 = 1.0)
sin_lookup: (angle: s64) -> s64 = {
    angle = angle & 0xFF;
    if angle < 64 { return angle * 4; }
    if angle < 192 { return 256 - (angle - 64) * 4; }
    return (angle - 192) * 4 - 256;
}

// Fixed-point cos ap
cos_lookup: (angle: s64) -> s64 = {
    return sin_lookup(angle + 64);
}

main: () -> s64 = {
    buffer: [40*20]u8;
    angle: s64 = 0;
    
    console_clear();
    console_cursor_disable();
    
    // Animation loop
    while angle < 256 {
        // Clear buffer
        i: s64 = 0;
        while i < 40*20 {
            @(^buffer + i * 8) = 0x20; // Space
            i = i + 1;
        }
        
        // Draw rotating square
        draw_square(15, angle, ^buffer);
        
        // Draw to screen
        console_cursor_reset();
        i = 0;
        while i < 40*20 {
            putchar(@(^buffer + i * 8));
            putchar(0x20);
            if i % 40 == 39 { putchar(0x0A); } // Newline
            i = i + 1;
        }
        
        angle = angle + 1;
    }
    
    console_cursor_enable();
    return 0;
}
